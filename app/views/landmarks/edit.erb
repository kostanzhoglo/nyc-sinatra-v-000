<h1>Update a NYC Landmark</h1>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  Name: <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"> <br>

  Year Completed: <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed.to_s %>"> <br>

  <input type="submit" value="Edit Landmark">

</form>
