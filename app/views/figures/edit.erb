<h1>Update a Historical Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <h3>Name: </h3>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"><br><br>

  <h3>Title(s)</h3>
  (please choose any that apply): <br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.id %>" <%="checked" if @figure.titles.include?(title)%>><%= title.name %> <br>
  <% end %>

  and/or Create a New Title: <br>
  <input type="text" name="title[name]" id="new_title"> <br><br><br><br>

  <h3>Landmark(s) he/she is connected to</h3>
  (please choose as many as apply): <br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.id %>" <%="checked" if @figure.landmarks.include?(landmark)%>><%= landmark.name %> <br>
  <% end %> <br>

  and/or Create a New Landmark: <br>
  <input type="text" name="landmark[name]" id="new_landmark"> <br><br>

  <input type="submit" value="Edit Figure">


</form>
